{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Release"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/build",
                "-S",
                "${workspaceFolder}"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Quick Config (No Cache Clear)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "${workspaceFolder}/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "Build Debug Standalone",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--config",
                "Debug",
                "--target",
                "juceSonic_Standalone",
                "-j",
                "8"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Debug: Config and Build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Quick Config (No Cache Clear)",
                "Build Debug Standalone"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Clean Build Directory",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "windows": {
                "command": "cmd",
                "args": [
                    "/c",
                    "rmdir",
                    "/s",
                    "/q",
                    "${workspaceFolder}\\build"
                ]
            }
        },
        {
            "label": "Full Rebuild",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean Build Directory",
                "Configure CMake",
                "Build Debug"
            ],
            "group": "build",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "numberOfThreads",
            "type": "promptString",
            "description": "Number of parallel build jobs",
            "default": "8"
        }
    ]
}