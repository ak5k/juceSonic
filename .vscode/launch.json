{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug VST3 in REAPER x64",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Program Files/REAPER (x64)/reaper.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "Build Debug",
            "logging": {
                "moduleLoad": false,
                "trace": false
            }
        },
        {
            "name": "Debug Standalone",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/juceSonic_artefacts/Debug/Standalone/juceSonic.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "Build Debug"
        },
        {
            "name": "Attach to Process",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "(gdb) Debug Standalone - Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/juceSonic_artefacts/Standalone/juceSonic",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Debug: Config and Build",
            "miDebuggerPath": "/home/linuxbrew/.linuxbrew/bin/gdb"
        },
        {
            "name": "(lldb) Debug Standalone - Linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/juceSonic_artefacts/Standalone/juceSonic",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Debug: Config and Build",
            "miDebuggerPath": "/home/linuxbrew/.linuxbrew/bin/lldb"
        },
        {
            "name": "(lldb) Debug Standalone - macOS",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/juceSonic_artefacts//Standalone/juceSonic.app/Contents/MacOS/juceSonic",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "Debug: Config and Build"
        }
    ]
}